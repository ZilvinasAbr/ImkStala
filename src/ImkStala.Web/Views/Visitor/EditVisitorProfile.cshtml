@using System.Threading.Tasks
@using ImkStala.DataAccess.Entities

@model ImkStala.Web.ViewModels.Visitor.EditVisitorProfileViewModel
@{
    ViewData["Title"] = "Redaguoti kliento duomenis";
}

<h2 class="formInfo">@ViewData["Title"]</h2>

<form asp-controller="Visitor" asp-action="EditVisitorProfile" method="post" class="form-horizontal registerForm" role="form">
    @if (TempData["Success"] != null)
    {
        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
    }
    <h4>Įveskite naujus duomenis</h4>
    <hr />
    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FirstName" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="FirstName" class="form-control" value=@Model.FirstName />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="LastName" class="form-control" value=@Model.LastName />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="PhoneNumber" class="form-control" value=@Model.PhoneNumber />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Išsaugoti</button>
        </div>
    </div>
    <p style="color: red">*- privalomi laukeliai</p>
    <a href="/Manage/ChangePassword">Pakeisti slaptažodį</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}