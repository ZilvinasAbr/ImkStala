@{
    ViewData["Title"] = "Home Page";
}

<script src="~/js/restaurant.js"></script>
<script src="~/assets/jquery.min.js"></script>
<script src="http://maps.googleapis.com/maps/api/js"></script>
<script src="~/js/indexmap.js"></script>

<div class="row">
    <div class="col-md-3">
        <div class="topRest">
            <h1 class="infoHeader"> Top 3</h1>
            <hr />
            <div class="miniRestaurant">
                <h2 class="styledHeader"> Pavadinimas</h2>
                <div class="row buttonRow">
                    <div class="col-md-12">
                        <a class="infoButton col-md-4" href="{{ restaurant.Id }}"> Informacija </a>
                        <a class="bookButton col-md-4" href="book/{{ restaurant.Id }}"> Rezervuoti </a>
                        <a class="favoriteButton col-md-4" href="favorite/{{ restaurant.Id }}"> Pamėgti </a>
                    </div>
                </div>
            </div>
            <div class="miniRestaurant">
                <h2 class="styledHeader"> Pavadinimas</h2>
                <div class="row buttonRow">
                    <div class="col-md-12">
                        <a class="infoButton col-md-4" href="Restaurant/{{ restaurant.Id }}"> Informacija </a>
                        <a class="bookButton col-md-4" href="Book/{{ restaurant.Id }}"> Rezervuoti </a>
                        <a class="favoriteButton col-md-4" href="Favorite/{{ restaurant.Id }}"> Pamėgti </a>
                    </div>
                </div>
            </div>
            <div class="miniRestaurant">
                <h2 class="styledHeader"> Pavadinimas</h2>
                <div class="row buttonRow">
                    <div class="col-md-12">
                        <a class="infoButton col-md-4" href="Restaurant/{{ restaurant.Id }}"> Informacija </a>
                        <a class="bookButton col-md-4" href="Book/{{ restaurant.Id }}"> Rezervuoti </a>
                        <a class="favoriteButton col-md-4" href="Favorite/{{ restaurant.Id }}"> Pamėgti </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <div class="restaurants" ng-app="restaurantApp" ng-controller="infiniteScrollRestaurants">
            <input style="width:100%" class="search" id="searchBar" type="text" ng-change="searchChanged()" placeholder="Paieška pagal pavadinimą" ng-model="searchKey" />
            <div infinite-scroll='loadMore()' infinite-scroll-distance='0'>
                <div class="restaurant" ng-repeat="restaurant in restaurants">
                    <h2 class="styledHeader"> {{ restaurant.RestaurantName }} </h2>
                    <hr />
                    <div class="description">
                        <p>{{ restaurant.Description }}</p>
                    </div>
                    <hr />
                    <div class="row buttonRow">
                        <div class="col-md-12">
                            <a class="infoButton col-md-4" href="/Home/Restaurant/{{ restaurant.Id }}"> Informacija </a>
                            <a class="bookButton col-md-4" href="/Home/Book/{{ restaurant.Id }}"> Rezervuoti </a>
                            <a class="favoriteButton col-md-4" href="/Favorite/{{ restaurant.Id }}"> Pamėgti </a>
                        </div>
                    </div>
                </div>
            </div>
            <div ng-if="restaurants.length==0">
                <h2 style="color:white;"> Nepavyko rasti restoranų </h2>
            </div>
         </div>
    </div>
    <div class="col-md-4">
        <div id="googleMap" class="map"></div>
    </div>
</div>