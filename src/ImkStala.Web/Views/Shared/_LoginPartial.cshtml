@using System.Security.Claims

@if (User.IsSignedIn())
{
    <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            @*<li>*@
                @*<a asp-controller="Manage" asp-action="Index" title="Manage">Sveiki, @User.GetUserName()!</a>*@
                @if (User.IsInRole("Visitor"))
                {
                    <li><a asp-controller="Visitor" asp-action="EditVisitorProfile" title="Redaguoti profilį">Sveiki, @User.GetUserName()!</a></li>
                }
                else if (User.IsInRole("Restaurant"))
                {
                    <li><a asp-controller="Restaurant" asp-action="EditRestaurantProfile" title="Redaguoti profilį">Sveiki, @User.GetUserName()!</a></li>
                }
            @*</li>*@
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Atsijungti</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="action-button"><a href="#registerModal" data-toggle="modal" class="noPadding"><span class="glyphicon glyphicon-user"></span> Registruotis </a></li>
        <li class="action-button"><a asp-controller="Account" asp-action="Login" data-toggle="modal" class="noPadding"><span class="glyphicon glyphicon-log-in"></span>Prisijungti</a></li>
    </ul>
}