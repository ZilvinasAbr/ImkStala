@using System.Security.Claims

@if (User.IsSignedIn())
{
    if (User.IsInRole("Visitor"))
    {
        <li><a asp-controller="Visitor" asp-action="EditVisitorProfile">Profilis</a></li>
        <li><a asp-controller="Home" asp-action="History">Rezervacijų istorija</a></li>
        <li><a asp-controller="Visitor" asp-action="GetVisitorFavorites">Pamėgti restoranai</a></li>
    }
    else if (User.IsInRole("Restaurant"))
    {
        <li><a asp-controller="Restaurant" asp-action="EditRestaurantProfile">Profilis</a></li>
        <li><a asp-controller="Restaurant" asp-action="Orders">Užsakymai</a></li>
        <li><a asp-controller="Restaurant" asp-action="ViewTables">Staliukai</a></li>
        <li><a asp-controller="Restaurant" asp-action="ViewMenu">Meniu</a></li>
    }
}

