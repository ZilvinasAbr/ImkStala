@using System.Collections.Generic
@using System.Threading.Tasks
@using ImkStala.DataAccess.Entities
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@using ImkStala.Web.ViewModels.Restaurant
@model ImkStala.Web.ViewModels.Restaurant.ViewMenuViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "View Menu";
}
@if (TempData["Success"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
}
<div class="col-md-6">
    <form asp-controller="Restaurant" asp-action="AddMenu" method="post" class="form-horizontal" role="form">
        <div class="form-horizontal">
            <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
            <div class="form-group">
                <label style="color: white;" asp-for="Name" class="col-md-3 control-label"></label>
                <input style="height: 50px; padding: 0;" asp-for="Name" class="col-md-3"/>
                <label style="color: white;" asp-for="Price" class="col-md-3 control-label"></label>
                <input style="padding: 0;" asp-for="Price" type="number" min="0.01" step="0.01" class="col-md-3"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="SelectedMenuItemType" style="background: #404040; color: white; width: 220px; padding: 5px; font-size: 16px; line-height: 1; border: 0; border-radius: 0; height: 34px; -webkit-appearance: none; border-radius: 10px;">
                    <option value="-1">Sukurti naują patiekalo tipą</option>
                    @{
                        foreach (var menuItemType in Model.MenuItemTypes)
                        {
                            <option value="@menuItemType.TypeName">@menuItemType.TypeName</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="NewTypeName" class="col-md-2 control-label" style="color: white;">Naujas patiekalo tipas</label>
                <div class="col-md-5">
                    <input asp-for="NewTypeName" class="form-control" value=@Model.SelectedMenuItemType />
                    <span asp-validation-for="NewTypeName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-10">
                    <input type="submit" value="Pridėti" class="btn btn-default"/>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="col-md-6">
    <table class="table" style="color:black; border-radius:10px; background-color:white;">
        <thead>
            <tr>
                <th>Pavadinimas</th>
                <th>Kaina</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var menu in Model.Meals)
            {
                <tr>
                    <td>@menu.Name</td>
                    <td>@menu.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>
