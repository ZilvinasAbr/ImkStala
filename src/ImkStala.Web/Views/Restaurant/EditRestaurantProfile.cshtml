@using System.Threading.Tasks
@using ImkStala.DataAccess.Entities


@model ImkStala.Web.ViewModels.Restaurant.EditRestaurantProfileViewModel
@{
    ViewData["Title"] = "Redaguoti restorano duomenis";
}

<h2 class="formInfo">@ViewData["Title"]</h2>

<form asp-controller="Restaurant" asp-action="EditRestaurantProfile" method="post" class="form-horizontal registerForm" role="form" enctype="multipart/form-data">
    @if (TempData["Success"] != null)
    {
        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
    }
    <h4>Įveskite naujus duomenis</h4>
    <hr />
    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="RestaurantName" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="RestaurantName" class="form-control" value=@Model.RestaurantName />
            <span asp-validation-for="RestaurantName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Address" class="form-control" value=@Model.Address />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="PhoneNumber" class="form-control" value=@Model.PhoneNumber />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Website" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Website" class="form-control" value=@Model.Website />
            <span asp-validation-for="Website" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Description" class="form-control" value=@Model.Description />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="LogoPath" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <img src="~/@Model.LogoPath" height="100" alt="@Model.RestaurantName Logo" title=@Model.RestaurantName />
            <p></p>
            <input type="file" name="logo" accept="image/*" />
            <span>Tinka tik .jpg, .png, .gif</span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Interjeras</label>
        <div class="col-md-5">
            @foreach(Interior interior in Model.Interiors)
            {
                <img src="~/@interior.InteriorPath" height="200" alt="@Model.RestaurantName Interior" title=@Model.RestaurantName style="border:3px solid white"/>

            }
            <p></p>
            <input type="file" name="files" accept="image/*" multiple />
            <span>Tinka tik .jpg, .png, .gif</span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Išsaugoti</button>
        </div>
    </div>
    <p style="color: red">*- privalomi laukeliai</p>
    <a href="/Manage/ChangePassword">Pakeisti slaptažodį</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
